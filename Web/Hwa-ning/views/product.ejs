<body>
    <header>
        <%- include('navbar')%>
    </header>
    <div id="container" style="position:relative;">
    <section>
        <div id="divSummary">
            <table style="margin-left:auto; margin-right:auto ;table-layout: fixed;width:1000px; border:solid 1px grey;">
                <tr>
                    <td>
                        <!-- 바꿔야할부분 1. 상품이미지  -->
                        <img src="<%= productInfo.thumbnail %>">
                    </td>
                    <td>
                        <table class="productSummary" style="table-layout: fixed; width:450px;" >
                            <th style="width:130px;"></th>
                            <th style="width:320px;"></th>
                            <tr>
                                <!-- 바꿔야할부분 2. 상품이름  -->
                                <td colspan="2" id="productName"><%= productInfo.pname %></td>
                            </tr>
                            <tr>
                                <td colspan="2"><hr></td>
                            </tr>
                            <tr>
                                <!-- 바꿔야할부분 3. 할인율,원가,할인가 -->
                                <% if(productInfo.dcRate!=null) { %>
                                    <td id="dcRate"><%= productInfo.dcRate %>%</td>
                                    <td style="text-align: right;">
                                        <span id="orginalPrice"><%= productInfo.price %>원</span>
                                        <span id="dcPrice"><%= parseInt( (100-productInfo.dcRate)/100*productInfo.price) %>원</span>
                                    </td>
                                <% }
                                else { %>
                                <td id="dcRate"></td>
                                <td style="text-align: right;">
                                    <span id="dcPrice"><%= productInfo.price %>원</span>
                                </td>
                                <% } %>
                            </tr>
                            <tr>
                                <td>
                                </td>
                                <td>
                                    <!-- 바꿔야할부분 4. 옵션명, 옵션 pk들 넣어줘야함  -->
                                    <select name="option" id = "option" style="width:100%; height:30px;" onchange="selectOption(this)">
                                        <% for(let i=0;i<optionInfo.stockPK.length;i++){ %>
                                            <%  
                                            let temp = "";
                                            if(optionInfo.option1[i] != null) {
                                                temp += optionInfo.option1[i];
                                                if(optionInfo.option2[i] != null) {
                                                    temp += "-" + optionInfo.option2[i];
                                                    if(optionInfo.option3[i] != null){
                                                        temp += "-" + optionInfo.option3[i];
                                                    }
                                                }
                                            }
                                            if(optionInfo.extracharge[i] != null){
                                                temp += " (+" + optionInfo.extracharge[i] + "원) ";  
                                            }
                                            if(optionInfo.stock[i] <= 50){
                                                if(optionInfo.stock[i] == 0)
                                                    temp += " / 품절";
                                                else
                                                    temp += " / 재고 : " + optionInfo.stock[i];
                                            }
                                            %>
                                            <% if(temp != ""){%>
                                                <% if(optionInfo.stock[i] == 0){ %>
                                                    <option value="<%= optionInfo.stockPK[i] %>" selected disabled><%= temp %></option>
                                                <% }
                                                else { %>
                                                    <option value="<%= optionInfo.stockPK[i] %>"><%= temp %></option>
                                                <%}%>
                                            <%}%>
                                        <%}%>
                                        <option value="" selected disabled hidden>옵션 선택</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"><hr></td>
                            </tr>

                            <!-- 선택한 옵션에 따라 추가되는 tr -->
                            <tr>
                                <td></td>
                                <td id="selected"></td>
                            </tr>

                            <tr>
                                <td colspan="2"><hr></td>
                            </tr>
                            <!-- 바꿔야할부분 6. 선택된 옵션들에 따라 총 수량 및 가격 합산 -->
                            <tr>
                                <td style="font-weight: bolder;">
                                    총 상품 금액
                                </td>
                                <td id="selectedTotal" style="text-align: right; font-size:20px;">
                                    <span id="totalCount"></span>
                                    <span id="totalPrice"></span>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"><hr></td>
                            </tr>
                            <tr>
                                <!-- 바꿔야할부분 6. 선택된 옵션들 구매 혹은 장바구니 API 연동 -->
                                <form style="margin-bottom:50px;">
                                    <td>
                                        <input type="button" value="장바구니" style="width:100%; height:50px;">
                                    </td>
                                    <td>
                                        <input type="button" value="구매하기" style="width:100%; height:50px;">
                                    </td>
                                </form>
                            </tr>
                        </table>
                    </td>
            </table>
        </div>
            <table id="divDetail">
                <% for(let i=0;i<productInfo.image.length;i++){ %>
                   <tr>
                       <td>
                            <img src= "<%= productInfo.image[i] %>">
                       </td>
                   </tr>
                <% } %>
            </table>


            
    </section>
    <footer>
        <%- include ('footer') %>
    </footer>
